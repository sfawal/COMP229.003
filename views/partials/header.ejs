<!--Header made with professor in class-->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
  <link rel='stylesheet' href='/@fortawesome/fontawesome-free/css/all.min.css' />
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <!-- Main Nav bar  -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <!-- Brand/logo -->
    <a class="navbar-brand" href="#">
      <img src="/images/logoo.png" alt="logo" style="width:60px; padding-left: 10px;">
    </a>
    
    <!-- Links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <% if (title == "Home") { %>
            <a class="nav-link active" href="/">
        <% } else { %>
            <a class="nav-link" href="/">
        <% } %>            
            <i class="fas fa-home"></i> Home </a>
        </a>
      </li>
      <li class="nav-item">
        <% if (title == "About") { %>
            <a class="nav-link active" href="/about">
        <% } else { %>
            <a class="nav-link" href="/about">
        <% } %>            
            <i class="fa fa-user"></i> About Me </a>
        </a>
      </li>
      <li class="nav-item">
        <% if (title == "Projects") { %>
            <a class="nav-link active" href="/projects">
        <% } else { %>
            <a class="nav-link" href="/projects">
        <% } %>            
            <i class="fa fa-folder"></i> Projects </a>
        </a>
      </li>
      <li class="nav-item">
        <% if (title == "Services") { %>
            <a class="nav-link active" href="/services">
        <% } else { %>
            <a class="nav-link" href="/services">
        <% } %>            
            <i class="fa fa-paint-brush"></i> Services </a>
        </a>
      </li>
      <li class="nav-item">
        <% if (title == "Contact") { %>
            <a class="nav-link active" href="/contact">
        <% } else { %>
            <a class="nav-link" href="/contact">
        <% } %>            
            <i class="fa fa-address-book"></i> Contact Me </a>
        </a>
      </li>
      <li class="nav-item dropdown">
        <% if (title == "Business Contacts List" || title == "Add a new Contact") { %>
          <a class="nav-link active dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Business Contacts</a>
        <% } else { %>
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Business Contacts</a>
        <% } %>       
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/inventory/list">Contact List</a></li>
          <li><a class="dropdown-item" href="/inventory/add">Add a new Contact</a></li>
        </ul>
      </li>
      <li class="nav-item">  
        <% if (typeof userName == 'string' && userName) { %>
          <a class="nav-link" href="/users/signout" onclick="return confirm('Are you sure?')">Sign Out (<%= userName %>)</a>
        <% } else { %>
          <a class="nav-link" href="/users/login">Login</a>
        <% } %>            
      </li> 
      
    </ul>
  </nav>